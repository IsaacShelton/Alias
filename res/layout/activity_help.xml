<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dockysoft.alias.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_message_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/continueButton"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/textViewHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Topics that start with a capital letter are topics not created by a user.\n\nYou can create a new topic by hitting the plus icon while viewing all the topics."
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_face_black_24dp"
                android:layout_below="@+id/textViewHelp"
                android:layout_alignStart="@+id/continueButton"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/textViewHelp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Change your alias while in a topic by hitting the face icon."
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_delete_black_24dp"
                android:layout_below="@+id/textViewHelp2"
                android:layout_alignStart="@+id/continueButton"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/textViewHelp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Delete messages you've sent by tapping on them and hitting delete.\n\nDelete topics you've created by entering the topic, tapping the more icon and hitting delete topic."
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_dns_black_24dp"
                android:layout_below="@+id/textViewHelp3"
                android:layout_alignStart="@+id/continueButton"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/textViewHelp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Join hidden topics by hitting the stacked computers icon and entering the exact topic name."
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_favorite_black_24dp"
                android:layout_below="@+id/textViewHelp4"
                android:layout_alignStart="@+id/continueButton"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/textViewHelp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Follow topics by hitting the favorite icon. You'll get notifications for topics you've followed."
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/continueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHelp5"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:text="Continue" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
